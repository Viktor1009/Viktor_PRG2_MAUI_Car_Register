<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG_MAUI_Car_Register.view.MainPage"
             >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="New version, now with Binding"
                   TextColor="DarkRed"/>
            <Image Source="car.jpg" Aspect="AspectFit" HeightRequest="150" Margin="0,0,0,20"/>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="StartAndExpand">
                <Entry Placeholder="RegistrationNumber" Text="{Binding RegistrationNumber}" />
                <Label Text="Vehicle Type:" VerticalOptions="Center"/>
                <Picker Title="Choose Type"
                        ItemsSource="{Binding VehicleTypes}"
                        SelectedItem="{Binding SelectedType}"
                        TextColor="DarkRed" 
                        HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
            <Entry Placeholder="Manufacturer" Text="{Binding Manufacturer}" />
            <Entry Placeholder="Model" Text="{Binding Model}" />
            <Entry Placeholder="YearModel" Text="{Binding YearModel}" />
            <Button x:Name="buttonRegister" Text="Register" Command="{Binding RegisterCommand}" Margin="0,0,0,20" BackgroundColor="DarkRed"/>

            <ListView
                Margin="0,0,0,20"
                ItemsSource="{Binding Vehicles}"
                />


            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="20">
                <Entry Text="{Binding Search}" HorizontalOptions="FillAndExpand" Placeholder="Sök på registreringsnummer"></Entry>
                <Button Command="{Binding SearchCommand}" Text="Sök" HorizontalOptions="End" BackgroundColor="DarkRed" TextColor="White" />
            </HorizontalStackLayout>
            <Label Text="{Binding SearchResult}" TextColor="DarkRed" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
