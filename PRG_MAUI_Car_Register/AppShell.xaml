<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PRG_MAUI_Car_Register.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PRG_MAUI_Car_Register.view"
    Shell.FlyoutBehavior="Disabled"
    Title="PRG_MAUI_Car_Register">

	<TabBar> 
		<!-- 
		Här skapas taben med de fyra sidorna 
		En Mainpage och en page för varje version av vehicle
		-->
		<ShellContent
			Title="Home"
			ContentTemplate="{DataTemplate local:MainPage}"/>
		<ShellContent
			Title="CarPage"
			ContentTemplate="{DataTemplate local:CarPage}"/>
		<ShellContent
			Title="TruckPage"
			ContentTemplate="{DataTemplate local:TruckPage}"/>
		<ShellContent
			Title="MotorcyclePage"
			ContentTemplate="{DataTemplate local:MotorcyclePage}"/>
	</TabBar>
</Shell>
